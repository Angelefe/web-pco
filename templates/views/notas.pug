extends ./layout.pug
 
block contenido
	main
		articles
			- if(locals.data.posts.results){
				each post in locals.data.posts.results
					article
						.titulo-container
							.tag-container
								each categoria in post.categories
									a.tag(href='/notas/'+categoria.key)= categoria.name
							a(href= "nota/"+post.slug, style='text-decoration: none; color: black;').titulo= post.title
						.img
							.blured(style='background-repeat: no-repeat; background-size:cover;background-position: center;background-image: url('+post.image.secure_url+')')
							img( src = post.image.secure_url, alt='aceiteros')
						a(href= "nota/"+post.slug, style='text-decoration: none; color: black;')
							.cuerpo!= post.content.brief
				- if(locals.data.posts.next)
					a.nav-link(href=(locals.filters.category || "notas/" )+ "?page="+locals.data.posts.next) mas notas...
			- }